<UserControl x:Class="SfBot.Views.Details.HallOfFameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:details="clr-namespace:SfBot.ViewModels.Details"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance details:HallOfFameViewModel}">
    <Grid>
<!--        <TextBlock Text="Under Construction..."-->
<!--                   FontSize="48"-->
<!--                   HorizontalAlignment="Center"-->
<!--                   VerticalAlignment="Center" />-->
        <DataGrid ItemsSource="{Binding Characters}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Rank}" Header="Rank" />
                <DataGridTextColumn Binding="{Binding Username}" Header="Username" />
                <DataGridTextColumn Binding="{Binding Guild}" Header="Guild" />
                <DataGridTextColumn Binding="{Binding Level}" Header="Level" />
                <DataGridTextColumn Binding="{Binding Honor}" Header="Honor" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
